{
  "name": "fullstack-graphql-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "codegen:graphql": "turbo run codegen:graphql",
    "dev:frontend": "turbo run dev --scope=frontend",
    "test:frontend": "turbo run test --scope=frontend",
    "test:watch": "turbo run test:watch",
    "lint:frontend": "turbo run lint --scope=frontend",
    "type-check:frontend": "turbo run type-check --scope=frontend",
    "build:backend": "turbo run build --scope=backend",
    "lint:backend": "turbo run lint --scope=backend",
    "type-check:backend": "turbo run type-check --scope=backend"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "^8.32.0",
    "prettier": "2.7.1",
    "turbo": "1.7.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.26.0"
}
