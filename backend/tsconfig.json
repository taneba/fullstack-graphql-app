{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "strict": true,
    "allowJs": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "exclude": ["**/tmp/", "node_modules/**/*"]
}
