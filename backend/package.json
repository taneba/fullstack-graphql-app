{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon 'src/index.ts' --exec 'ts-node -r tsconfig-paths/register'",
    "gql-gen": "graphql-codegen --config codegen.yml",
    "db:migration:generate": "dotenv -e .env.localhost prisma migrate dev --create-only",
    "db:migration:run": "dotenv -e .env.localhost prisma migrate dev",
    "db:reset": "dotenv -e .env.localhost prisma migrate reset",
    "db:pull": "dotenv -e .env.localhost prisma db pull",
    "prisma-gen": "dotenv -e .env.localhost prisma generate",
    "prisma-studio": "dotenv -e .env.localhost prisma studio",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix --cache --ext .ts,.tsx src"
  },
  "dependencies": {
    "@envelop/auth0": "1.2.1",
    "@envelop/core": "1.6.6",
    "@envelop/depth-limit": "1.2.1",
    "@envelop/generic-auth": "1.2.1",
    "@envelop/rate-limiter": "1.3.0",
    "@graphql-tools/schema": "8.3.1",
    "@prisma/client": "3.5.0",
    "@types/got": "9.6.12",
    "@types/jsonwebtoken": "8.5.6",
    "@types/node": "16.11.19",
    "fastify": "3.25.3",
    "fastify-compress": "4.0.1",
    "fastify-cors": "6.0.2",
    "fastify-helmet": "5.3.2",
    "got": "11.8.3",
    "graphql": "15.8.0",
    "graphql-helix": "1.10.3",
    "graphql-tools": "8.2.0",
    "jsonwebtoken": "8.5.1",
    "jwks-rsa": "2.0.5",
    "prisma": "3.5.0",
    "ts-pattern": "3.3.4",
    "typescript": "4.5.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/typescript-resolvers": "2.4.3",
    "@graphql-codegen/visitor-plugin-common": "2.5.2",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "chalk": "5.0.0",
    "dotenv-cli": "4.1.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "graphql-playground-html": "1.6.30",
    "nodemon": "2.0.15",
    "prisma": "3.5.0",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "3.12.0"
  }
}
