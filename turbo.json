{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "type-check",
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {},
    "type-check": {
      "dependsOn": [
        "^type-check"
      ]
    },
    "test": {
      "outputs": [
        "coverage/**"
      ]
    },
    "test:watch": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "codegen:graphql": {
      "cache": false
    }
  }
}