{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:old": "nodemon 'src/index.ts' --exec 'ts-node -r tsconfig-paths/register'",
    "db:migration:generate": "dotenv -e .env.localhost prisma migrate dev --create-only",
    "db:migration:run": "dotenv -e .env.localhost prisma migrate dev",
    "db:reset": "dotenv -e .env.localhost prisma migrate reset",
    "db:pull": "dotenv -e .env.localhost prisma db pull",
    "codegen:graphql": "graphql-codegen --config codegen.yml",
    "codegen:prisma": "dotenv -e .env.localhost prisma generate",
    "prisma-studio": "dotenv -e .env.localhost prisma studio",
    "type-check": "tsc --noEmit",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "lint": "eslint --fix --cache --ext .ts,.tsx src"
  },
  "dependencies": {
    "@envelop/auth0": "3.6.0",
    "@envelop/core": "2.6.0",
    "@envelop/depth-limit": "1.8.0",
    "@envelop/generic-auth": "4.3.2",
    "@envelop/rate-limiter": "3.6.0",
    "@fastify/compress": "6.2.0",
    "@fastify/cors": "8.1.1",
    "@fastify/helmet": "^9.1.0",
    "@graphql-tools/schema": "9.0.12",
    "@graphql-yoga/node": "2.13.13",
    "@prisma/client": "4.8.1",
    "@types/got": "9.6.12",
    "@types/jsonwebtoken": "8.5.9",
    "@types/node": "16.11.60",
    "fastify": "4.6.0",
    "got": "11.8.6",
    "graphql": "15.8.0",
    "graphql-tools": "8.3.14",
    "jsonwebtoken": "8.5.1",
    "jwks-rsa": "2.1.5",
    "prisma": "4.8.1",
    "ts-pattern": "^4.0.5",
    "tsconfig": "*",
    "typescript": "4.7.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.11.6",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "@graphql-codegen/visitor-plugin-common": "2.12.1",
    "@graphql-yoga/render-graphiql": "2.13.12",
    "chalk": "4.1.2",
    "config": "*",
    "dotenv-cli": "6.0.0",
    "nodemon": "2.0.20",
    "tsc-alias": "1.7.0",
    "tsconfig-paths": "4.1.1",
    "tsx": "3.8.2"
  }
}
