{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:old": "nodemon 'src/index.ts' --exec 'ts-node -r tsconfig-paths/register'",
    "db:migration:generate": "dotenv -e .env.localhost prisma migrate dev --create-only",
    "db:migration:run": "dotenv -e .env.localhost prisma migrate dev",
    "db:reset": "dotenv -e .env.localhost prisma migrate reset",
    "db:pull": "dotenv -e .env.localhost prisma db pull",
    "codegen:graphql": "graphql-codegen --config codegen.yml",
    "codegen:prisma": "dotenv -e .env.localhost prisma generate",
    "prisma-studio": "dotenv -e .env.localhost prisma studio",
    "type-check": "tsc --noEmit",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "lint": "eslint --fix --cache --ext .ts,.tsx src",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@envelop/auth0": "6.0.0",
    "@envelop/core": "5.0.0",
    "@envelop/depth-limit": "4.0.0",
    "@envelop/generic-auth": "7.0.0",
    "@fastify/compress": "7.0.0",
    "@fastify/cors": "9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@graphql-tools/schema": "10.0.3",
    "@graphql-tools/utils": "^10.1.0",
    "@prisma/client": "5.10.2",
    "@types/got": "9.6.12",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "20.11.24",
    "fastify": "4.26.2",
    "got": "14.2.0",
    "graphql": "16.8.1",
    "graphql-tools": "9.0.1",
    "graphql-yoga": "5.1.1",
    "jsonwebtoken": "9.0.2",
    "jwks-rsa": "3.1.0",
    "prisma": "5.10.2",
    "ts-pattern": "^5.0.8",
    "tsconfig": "workspace:*",
    "typescript": "5.3.3",
    "validation-schema": "workspace:*",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript-resolvers": "4.0.6",
    "@graphql-codegen/visitor-plugin-common": "5.1.0",
    "@graphql-yoga/render-graphiql": "5.1.1",
    "chalk": "5.3.0",
    "config": "workspace:*",
    "dotenv-cli": "7.3.0",
    "nodemon": "3.1.0",
    "tsc-alias": "1.8.8",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.7.1"
  }
}