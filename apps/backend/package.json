{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:old": "nodemon 'src/index.ts' --exec 'ts-node -r tsconfig-paths/register'",
    "db:migration:generate": "dotenv -e .env.localhost prisma migrate dev --create-only",
    "db:migration:run": "dotenv -e .env.localhost prisma migrate dev",
    "db:reset": "dotenv -e .env.localhost prisma migrate reset",
    "db:pull": "dotenv -e .env.localhost prisma db pull",
    "codegen:graphql": "graphql-codegen --config codegen.yml",
    "codegen:prisma": "dotenv -e .env.localhost prisma generate",
    "prisma-studio": "dotenv -e .env.localhost prisma studio",
    "type-check": "tsc --noEmit",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "lint": "eslint --fix --cache --ext .ts,.tsx src"
  },
  "dependencies": {
    "@envelop/auth0": "3.4.1",
    "@envelop/core": "2.4.1",
    "@envelop/depth-limit": "1.6.1",
    "@envelop/generic-auth": "4.3.1",
    "@envelop/rate-limiter": "3.4.0",
    "@fastify/compress": "^6.1.0",
    "@fastify/cors": "^8.0.0",
    "@fastify/helmet": "^9.1.0",
    "@graphql-tools/schema": "8.5.0",
    "@graphql-yoga/node": "2.13.4",
    "@prisma/client": "4",
    "@types/got": "9.6.12",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "16.11.45",
    "fastify": "4.3.0",
    "got": "11.8.5",
    "graphql": "15.8.0",
    "graphql-tools": "8.3.0",
    "jsonwebtoken": "8.5.1",
    "jwks-rsa": "2.1.4",
    "prisma": "4",
    "ts-pattern": "^4.0.5",
    "tsconfig": "*",
    "typescript": "4.7.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.11.2",
    "@graphql-codegen/typescript-resolvers": "2.7.2",
    "@graphql-codegen/visitor-plugin-common": "2.12.0",
    "@graphql-yoga/render-graphiql": "^2.9.3",
    "chalk": "4.1.2",
    "config": "*",
    "dotenv-cli": "5.1.0",
    "nodemon": "2.0.19",
    "tsc-alias": "1.7.0",
    "tsconfig-paths": "4.0.0",
    "tsx": "^3.4.3"
  }
}
