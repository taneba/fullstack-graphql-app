{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "db:migration:generate": "dotenv -e .env.localhost prisma migrate dev --create-only",
    "db:migration:run": "dotenv -e .env.localhost prisma migrate dev",
    "db:reset": "dotenv -e .env.localhost prisma migrate reset",
    "db:pull": "dotenv -e .env.localhost prisma db pull",
    "codegen:graphql": "graphql-codegen --config codegen.yml",
    "codegen:prisma": "dotenv -e .env.localhost prisma generate",
    "prisma-studio": "dotenv -e .env.localhost prisma studio",
    "type-check": "tsc --noEmit",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "lint": "eslint --fix --cache --ext .ts,.tsx src"
  },
  "dependencies": {
    "@envelop/auth0": "3.3.3",
    "@envelop/core": "2.3.3",
    "@envelop/depth-limit": "1.5.3",
    "@envelop/generic-auth": "4.2.4",
    "@envelop/rate-limiter": "3.3.3",
    "@fastify/compress": "^5.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/helmet": "^8.1.0",
    "@graphql-tools/schema": "8.3.14",
    "@graphql-yoga/node": "2.9.1",
    "@prisma/client": "3.14.0",
    "@types/got": "9.6.12",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "16.11.39",
    "fastify": "3.29.0",
    "got": "11.8.5",
    "graphql": "15.8.0",
    "graphql-tools": "8.2.12",
    "jsonwebtoken": "8.5.1",
    "jwks-rsa": "2.1.4",
    "prisma": "^3.9.2",
    "ts-pattern": "3.3.5",
    "tsconfig": "*",
    "tsx": "^3.4.3",
    "typescript": "4.7.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript-resolvers": "2.6.6",
    "@graphql-codegen/visitor-plugin-common": "2.9.1",
    "chalk": "4.1.2",
    "config": "*",
    "dotenv-cli": "5.1.0",
    "nodemon": "2.0.16",
    "ts-node": "10.8.1",
    "ts-node-dev": "1.1.8",
    "tsc-alias": "1.6.9",
    "tsconfig-paths": "3.14.1"
  }
}
