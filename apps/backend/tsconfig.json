{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "allowJs": true,
    "alwaysStrict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["types", "node_modules/@types", "node_modules/types"]
  },
  "exclude": ["**/tmp/", "node_modules/**/*"]
}
